#pragma once
#include "helper.h"


void RobotLine::radionica()
{
  static int krizanje1 = 0;
  static int krizanje2 = 0;


  if (krizanje1 == 0) {
    lineFollow();
  }


  if (line(0) and line(8) and krizanje1 == 0) {
    stop();
    delayMs(500);
    go(60, 60);
    delayMs(500);
    lineFollow();
    krizanje1 = 1;
  }
  else if (lineAny() and krizanje1 == 1) {

    lineFollow();

  }

  else if ( not lineAny() and krizanje1 == 1) {
    go(90, -90);
    delayMs(600);
    lineFollow();
    if (line(8) and line(0)) {
      stop();
      delayMs(500);
      krizanje1 = 2;
    }

  }






  if (line(0) and line(8) and krizanje1 == 2) { // ovo radi to
    stop();
    delayMs(500);
    go(-90, 90);
    delayMs(500);
    stop();
    delayMs(500);
    go(60, 60);
    delayMs(500);
    lineFollow();
    krizanje1 = 3;
  }

  else if (lineAny() and krizanje1 == 3) { // ovo radi ne≈°to drugo

    lineFollow();

  }

  else if ( not lineAny() and krizanje1 == 3) {
    stop();
    delayMs(500);
    go(90, -90);
    delayMs(600);
    krizanje1 = 4;
  }

  else if (krizanje1 == 4) {
    if(line(8) and line(0)){
    go(90, 90);
    delayMs(800);
    lineFollow();
    }
  }
}
