#pragma once
#include "helper.h"



void RobotLine::radionica()
{
  static int broj = 0;
  char simbol[10 + sizeof(char)];



  if ( not lineAny() and not broj <= 6) {
    stop();
    delayMs(100);
    go(0, 25);
    delayMs(500);
    go(50, 50);
    delayMs(500);
    broj++;
  }
  if (line(0) and line(8) and broj == 0) {
    go (-90, 90);
    delayMs(500);
    broj ++;
  }


  if (line(0) and line(8) and broj == 5) {
    stop();
    delayMs(500);
    go (-90, 90);
    delayMs(1000);
    broj ++;
  }

  if (line(5) and line(8) and not line(0) ) {
    go (-90, 90);
    delayMs(500);
  }


  if (line(7) and broj == 4) {
    go (90, 90);
    delayMs(500);
    broj++;
  }

  if ( line(8) and broj == 6) {
    go(90, -90);
    delayMs(500);
    broj ++;
  }


  if ( broj == 8 and not lineAny()) {
    go (90, 90);
    delayMs(50);
    broj++;
  }

  if ( broj == 7 and pitch() < -10) {
    go (90, 90);
    delayMs(1000);
    broj++;
  }


  lineFollow();
  sprintf(simbol, "%d", broj);
  display(simbol);

}
